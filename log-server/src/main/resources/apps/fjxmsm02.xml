<?xml version="1.0" encoding="UTF-8"?>
<included>
    <property name="fjxmsm02" value="fjxmsm02"/>

    <appender name="fjxmsm02-common" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${dir}/${fjxmsm02}/${common}/current.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${dir}/${fjxmsm02}/${common}/%d{yyyy-MM-dd HH}.log</fileNamePattern>
            <maxHistory>1440</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss} [%thread] %-5level %logger{100} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="fjxmsm02-status" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${dir}/${fjxmsm02}/${status}/current.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${dir}/${fjxmsm02}/${status}/%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>60</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss} %logger{5} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="fjxmsm02.RfidListener" level="info" additivity="false">
        <appender-ref ref="fjxmsm02-status"/>
    </logger>

    <logger name="fjxmsm02.com.xyj.supermarket" level="debug">
        <appender-ref ref="fjxmsm02-common"/>
    </logger>
</included>