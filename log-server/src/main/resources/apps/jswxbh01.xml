<?xml version="1.0" encoding="UTF-8"?>
<included>
    <property name="app" value="jswxbh01"/>

    <appender name="jswxbh01-common" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${dir}/${app}/${common}/current.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${dir}/${app}/${common}/%d{yyyy-MM-dd HH}.log</fileNamePattern>
            <maxHistory>1440</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss} [%thread] %-5level %logger{100} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="jswxbh01-status" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${dir}/${app}/${status}/current.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${dir}/${app}/${status}/%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>60</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss} %logger{5} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="jswxbh01.RfidListener" level="info" additivity="false">
        <appender-ref ref="jswxbh01-status"/>
    </logger>

    <logger name="jswxbh01.com.xyj.supermarket" level="debug">
        <appender-ref ref="jswxbh01-common"/>
    </logger>
</included>